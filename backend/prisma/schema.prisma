generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}



model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  role      Role
  schoolId  Int?
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())

  directedSchools School[]   @relation("SchoolDirector")
  uploadedMenus   Menu[]     @relation("MenuUploader")
  selections      Selection[]
}

model School {
  id        Int     @id @default(autoincrement())
  name      String
  address   String?

  directorId Int?
  director   User? @relation("SchoolDirector", fields: [directorId], references: [id])

  menus     Menu[]
}

model Menu {
  id          Int       @id @default(autoincrement())
  title       String?
  week        String?
  weekStart   DateTime?
  uploadedAt  DateTime  @default(now())

  uploadedById Int
  uploadedBy   User @relation("MenuUploader", fields: [uploadedById], references: [id])

  schoolId Int
  school   School   @relation(fields: [schoolId], references: [id])

  items    MenuItem[]
}

model MenuItem {
  id      Int     @id @default(autoincrement())
  name    String
  price   Float   @default(0)

  menuId  Int
  menu    Menu   @relation(fields: [menuId], references: [id])

  selections Selection[]
}

model Selection {
  id        Int    @id @default(autoincrement())
  userId    Int
  user      User   @relation(fields: [userId], references: [id])

  menuItemId Int
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id])

  quantity Int @default(1)
  createdAt DateTime @default(now())
}

enum Role {
  DIRECTOR
  PARENT
  TEACHER
  SUPERADMIN
}
