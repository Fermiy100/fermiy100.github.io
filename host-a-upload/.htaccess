# Отключение кэширования для разработки
<IfModule mod_headers.c>
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
</IfModule>

# Установка правильных MIME-типов
AddType text/javascript .js
AddType text/css .css
AddType image/svg+xml .svg

# Перенаправление всех запросов на index.html для SPA
<IfModule mod_rewrite.c>
    RewriteEngine On
    # Исключаем существующие файлы и директории
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    # Перенаправляем все остальное на index.html
    RewriteRule ^ index.html [L]
</IfModule>